int potpin = 0; // Define analog pin 0
int ledpin = 11; // Define digital pin 11 (PWM output)
int val = 0; // Temporary variable to store sensor values

void setup() {
  pinMode(ledpin, OUTPUT); // Set digital pin 11 as output
  Serial.begin(9600); // Set baud rate to 9600
  // Note: Analog pins are automatically set as input
}

void loop() {
  val = analogRead(potpin); // Read the sensor's analog value and assign it to val
  Serial.println(val); // Print the val variable
  analogWrite(ledpin, val / 4); // Turn on the LED and set brightness (PWM output max 255)
  delay(10); // Delay 10ms
}
